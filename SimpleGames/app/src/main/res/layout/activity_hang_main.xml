<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_main"
    tools:context=".hangingman.HangMainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Titulo qualquer"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryLight"/>

    <Button
        android:id="@+id/btn_top"
        android:text="Single Player"
        style="@style/ButtonStyle"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_mid"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_mid"
        android:text="Multi Player"
        style="@style/ButtonStyle"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_bot"
        android:text="Scores"
        style="@style/ButtonStyle"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_mid"
        android:layout_centerInParent="true" />

</RelativeLayout>